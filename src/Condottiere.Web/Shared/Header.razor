<header class="w-full text-white bg-@Styles.MainColor-700 flex justify-center">
    <div class="w-full max-w-3xl flex flex-col">
        <div class="flex flex-row items-center justify-between py-2 md:py-3 px-4 md:px-8">
            <div class="flex flex-row items-center justify-between">
                <span class="text-lg font-semibold tracking-widest text-white hover:text-red-100 uppercase rounded-lg">
                    @HeaderContent
                </span>
            </div>
            <nav class="flex justify-end items-center flex-row space-x-2">
                @Navigation
            </nav>
        </div>
    </div>
</header>

@code {
    private bool showMenu = false;
    
    [Parameter]
    public RenderFragment? HeaderContent { get; set; }
    
    [Parameter]
    public RenderFragment? Navigation { get; set; }

    private void ToggleMenu()
    {
        showMenu = !showMenu;
    }
}