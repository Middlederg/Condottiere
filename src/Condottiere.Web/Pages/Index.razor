@page "/"

<PageTitle>Condottiere</PageTitle>

<CascadingValue Value="game">
    <CascadingValue Value="gameContext">

        <Header />
    
    <div class="max-w-3xl mx-auto px-4 md:px-8">

        @if (game is not null)
        {
            @foreach (var player in game.Turn.Players)
            {
                <div class="flex justify-between items-center">
                    <span>
                        @player.Name
                    </span>
                    <span>
                        @player.Points(gameContext)
                    </span>
                </div>
            }
        }


    </div>
    </CascadingValue>
</CascadingValue>

@code {

    private GameContext gameContext = new GameContext(4, new SpringOptions(), new BishopOptions());
    private Game? game;

    protected override void OnInitialized()
    {
        game = new Game(gameContext);
    }
}